{
  "name": "tree-meh",
  "displayName": "Tree Meh Extension",
  "description": "Adds right click option to copy tree output to clipboard on selected directory from navigation pane.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tree-meh.generateTree",
        "title": "Everything",
        "args": [
          {
            "resource": "${resource}"
          }
        ]
      },
      {
        "command": "tree-meh.generateTreeWithIgnore",
        "title": "Ignore Dependency Directories"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder && resourceScheme == 'file' && explorerViewletVisible",
          "submenu": "tree-meh.submenu",
          "group": "tree-meh"
        }
      ],
      "tree-meh.submenu": [
        {
          "command": "tree-meh.generateTree",
          "when": "explorerResourceIsFolder && resourceScheme == 'file' && explorerViewletVisible",
          "group": "navigation@1"
        },
        {
          "command": "tree-meh.generateTreeWithIgnore",
          "when": "explorerResourceIsFolder && resourceScheme == 'file' && explorerViewletVisible",
          "group": "navigation@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "tree-meh.submenu",
        "label": "Copy Directory Tree"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "tree-node-cli": "1.6.0"
  }
}
